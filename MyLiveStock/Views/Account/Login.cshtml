@model Entity.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/Css/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Css/Login.css" />
</head>
<body>
    <div class="wrapper">
        <form class="form-signin" action="Login" method="post">
            <h2 class="form-signin-heading">Connexion</h2>
            <div class="form-group">
                <input type="text" class="form-control" name="username" placeholder="Email Address" required="" autofocus="" />
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password" required="" />
            </div>
            <div class="form-group">                
                <label class="checkbox">
                    <input data-toggle="checkbox-x" type="checkbox" value="remember-me" id="rememberMe" name="rememberMe" class="checkbox"> Se souvenir de moi
                </label>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-adn btn-block" type="submit">Login</button>
            </div>
        </form>
    </div>
</body>
</html>
