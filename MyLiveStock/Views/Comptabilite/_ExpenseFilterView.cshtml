@model List<Entity.Transactions.Transaction>

<table class="table table-hover table-striped table-responsive" id="js-expense-table">
    <thead>
        <tr>            
            <th>Date</th>
            <th style="text-align:left">Description</th>
            <th style="text-align:center;">Categorie</th>
            <th style="text-align:right">Montant</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expense in Model)
        {
            <tr>
                <td>@expense.Date</td>
                <td style="text-align:left;">@expense.Description</td>
                <td style="text-align:center;">@expense.Categorie</td>
                <td class="parse-amount" style="text-align:right;">@expense.Amount</td>
            </tr>
        }       
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td style="text-align:right" id="">
                Total: &nbsp;<strong id="total">@Model.Sum(t => t.Amount)</strong>
            </td>
        </tr>
    </tfoot>
</table>

