@section scripts{
    <script src="~/Scripts/Plugin/chartjs/Chart.min.js"></script>
    <script src="~/Scripts/Plugin/flot/jquery.flot.min.js"></script>
    <script src="~/Scripts/Plugin/flot/jquery.flot.resize.min.js"></script>
    <script src="~/Scripts/Plugin/flot/jquery.flot.pie.min.js"></script>
    <script src="~/Scripts/Plugin/flot/jquery.flot.categories.min.js"></script>    
    <script type="text/javascript">
        $(document).ready(function () {

            $(function () {

                /*
         * BAR CHART
         * ---------
         */

                var bar_data = {
                    data: [["JAnvier", 10], ["Février", 8], ["Mars", 4], ["Avril", 13], ["Mai", 17], ["Juin", 9], ["Juillet", 9], ["Août", 9], ["Septembre", 9], ["Octobre", 9], ["Novembre", 9], ["Decembre", 22]],
                    color: "#3c8dbc"
                };
                $.plot("#bar-chart", [bar_data], {
                    grid: {
                        borderWidth: 1,
                        borderColor: "#f3f3f3",
                        tickColor: "#f3f3f3"
                    },
                    series: {
                        bars: {
                            show: true,
                            barWidth: 0.5,
                            align: "center"
                        }
                    },
                    xaxis: {
                        mode: "categories",
                        tickLength: 0
                    }
                });                
                
                /* END BAR CHART */

            });

        });
    </script>

